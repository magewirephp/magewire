<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd"
>
    <widget id="visual_item" class="Magewirephp\Magewire\Block\Tmp\Test">
        <label>Visual Item</label>
        <description>Visual Item</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="true" visible="true">
                <label>Title</label>
            </parameter>

            <parameter name="text_color" xsi:type="select" visible="true" required="true">
                <label>Text Color</label>
                <description>Text color of title and description</description>
                <options>
                    <option name="black" value="black" selected="true">
                        <label>Black</label>
                    </option>
                    <option name="white" value="white">
                        <label>White</label>
                    </option>
                </options>
            </parameter>

            <parameter name="link" xsi:type="text" required="true" visible="true">
                <label>Link</label>
            </parameter>

            <parameter name="overlay_color" xsi:type="select" visible="true" required="true">
                <label>Overlay Color</label>
                <options>
                    <option name="dark" value="black" selected="true">
                        <label>Dark</label>
                    </option>
                    <option name="light" value="white">
                        <label>Light</label>
                    </option>
                </options>
            </parameter>

            <parameter name="badge_text" xsi:type="text" required="false" visible="true">
                <label>Badge Text</label>
            </parameter>

            <parameter name="badge_color" xsi:type="select" visible="true" required="false">
                <label>Badge Color</label>
                <options>
                    <option name="yellow" value="yellow" selected="true">
                        <label>Yellow</label>
                    </option>
                    <option name="blue" value="blue">
                        <label>Blue</label>
                    </option>
                    <option name="red" value="red">
                        <label>Red</label>
                    </option>
                    <option name="black" value="black">
                        <label>Black</label>
                    </option>
                </options>
            </parameter>

            <parameter name="badge_text_color" xsi:type="select" visible="true" required="false">
                <label>Badge Text Color</label>
                <options>
                    <option name="white" value="white">
                        <label>White</label>
                    </option>
                    <option name="black" value="black">
                        <label>Black</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
